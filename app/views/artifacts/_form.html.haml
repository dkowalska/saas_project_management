= form_for @artifact, html: { class: "form form-horizontal artifact" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
  .form-group
    = f.label :upload, value: 'File to upload', class: 'control-label col-lg-2'
    .col-lg-10
      = f.file_field :upload, class: 'form-control', required: true
  = f.hidden_field :project_id
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), tenant_project_path(tenant_id: Tenant.current_tenant_id, id: @artifact.project_id), :class => 'btn btn-default'
