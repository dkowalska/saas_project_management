- model_class = Project
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @project.title
%p
  %strong= model_class.human_attribute_name(:details) + ':'
  %br
  = @project.details
%p
  %strong= model_class.human_attribute_name(:expected_start_date) + ':'
  %br
  = @project.expected_start_date
%p
  %strong= model_class.human_attribute_name(:expected_completion_date) + ':'
  %br
  = @project.expected_completion_date
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @project.tenant_id

%h3 Artifacts
= render 'artifacts/list', artifacts: @project.artifacts

= link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_tenant_project_path(@project, tenant_id: @tenant.id), :class => 'btn btn-default'
= link_to 'Edit Project Users', users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), tenant_project_path(@project, tenant_id: @tenant.id), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
