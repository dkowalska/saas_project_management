- if current_user
  %h3
    Organization: #{@tenant.name}
- else
  .row
    .col-lg-12.sign_up_alert
      = bootstrap_flash
  .container.first-page
    .row
      .col-lg-6.first-page-box
        .mb-50
          %h2.title-bold Coord
          %p.lead
            Welcome to an e-commerce marketing project management application you'll love.
            Please take a look at our great plans:
        .row
          .col-lg-6
            .panel.panel-default.plan-panel
              .panel-body
                %h2.extra-bold FREE PLAN
                %p.extra-bold Price: Free
                .features
                  %ul.pl-0
                    %li Unlimited file uploads
                    %li Access anywhere
                    %li 1 project
                %p
                  = link_to 'SIGN UP', new_user_registration_path(plan: 'free'), class: 'btn btn-danger btn-lg sign-up-button'
          .col-lg-6
            .panel.panel-default.plan-panel
              .panel-body
                %h2.extra-bold PREMIUM PLAN
                %p.extra-bold Price: $10
                .features
                  %ul.pl-0
                    %li Unlimited file uploads
                    %li Access anywhere
                    %li.text-danger.extra-bold Unlimited projects
                %p
                  = link_to 'SIGN UP', new_user_registration_path(plan: 'premium'), class: 'btn btn-danger btn-lg sign-up-button'